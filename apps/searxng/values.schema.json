{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eaglepass.io/homelab/searxng/values.schema.json",
  "title": "searxng values schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "app-template": {
      "type": "object",
      "description": "bjw-s app-template values",
      "additionalProperties": true
    },
    "config": {
      "type": "object",
      "properties": {
        "settingsYaml": {
          "type": "string",
          "description": "Non-sensitive SearxNG settings YAML"
        }
      },
      "additionalProperties": false
    },
    "backups": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "schedule": { "type": "string", "default": "*/15 * * * *" },
        "retentionDays": { "type": "integer", "minimum": 0, "default": 7 },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "resources": { "type": "object" },
        "nfs": {
          "type": "object",
          "properties": {
            "server": { "type": "string", "default": "10.0.50.3" },
            "path": { "type": "string", "default": "/exports/backups/searxng" }
          },
          "required": ["server", "path"],
          "additionalProperties": false
        }
      },
      "required": ["enabled", "schedule", "retentionDays", "nfs"],
      "additionalProperties": false
    }
  }
}
